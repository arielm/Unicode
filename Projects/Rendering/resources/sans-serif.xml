<?xml version="1.0" encoding="utf-8"?>
<!--
 Testing Android fonts on the desktop
 -->
<VirtualFont>
    <!-- Undefined -->
    <Set>
        <Ref uri="assets://fonts/DroidSans.ttf" />
        <Ref uri="assets://fonts/DroidSansFallback.ttf" />
    </Set>
    <!-- Arabic, Persian -->
    <Set lang="ar:fa">
        <Group>
            <Ref uri="assets://fonts/DroidNaskh-Regular.ttf" />
            <Ref uri="assets://fonts/DroidKufi-Regular.ttf" />
            <Ref uri="assets://fonts/DroidSansArabic.ttf" />
        </Group>
        <Ref uri="assets://fonts/DroidSansFallback.ttf" />
    </Set>
    <!-- Bulgarian, Russian, Ukrainian -->
    <Set lang="bg:ru:uk">
        <Ref uri="assets://fonts/DroidSans.ttf" />
        <Ref uri="assets://fonts/DroidSansFallback.ttf" />
    </Set>
    <!-- Greek -->
    <Set lang="el">
        <Ref uri="assets://fonts/DroidSans.ttf" />
        <Ref uri="assets://fonts/DroidSansFallback.ttf" />
    </Set>
    <!-- Hebrew, Yiddish -->
    <Set lang="he:yi">
        <Ref uri="assets://fonts/DroidSansHebrew-Regular.ttf" />
        <Ref uri="assets://fonts/DroidSansFallback.ttf" />
    </Set>
    <!-- Japanese -->
    <Set lang="ja">
        <Ref uri="assets://fonts/MTLmr3m.ttf" />
        <Ref uri="assets://fonts/DroidSansFallback.ttf" />
    </Set>
    <!-- Korean -->
    <Set lang="ko">
        <Ref uri="assets://fonts/NanumGothic.ttf" />
        <Ref uri="assets://fonts/DroidSansFallback.ttf" />
    </Set>
    <!-- Thai -->
    <Set lang="th">
        <Ref uri="assets://fonts/DroidSansThai.ttf" />
        <Ref uri="assets://fonts/DroidSansFallback.ttf" />
    </Set>
    <!-- Hindi -->
    <Set lang="hi">
        <Ref uri="assets://fonts/DroidSansDevanagari-Regular.ttf" />
        <Ref uri="assets://fonts/DroidSansFallback.ttf" />
    </Set>
    <!-- Chinese (Simplified) -->
    <Set lang="zh-cn:zh-sg">
        <Ref uri="assets://fonts/DroidSansFallback.ttf" />
    </Set>
    <!-- Chinese (Traditional) -->
    <Set lang="zh-hk:zh-mo:zh-tw">
        <Ref uri="assets://fonts/DroidSansFallback.ttf" />
    </Set>
</VirtualFont>
